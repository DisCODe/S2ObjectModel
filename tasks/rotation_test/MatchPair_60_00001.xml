<?xml version="1.0" encoding="utf-8"?>
<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>jkrasnod</name>
		</Author>
		
		<Description>
			<brief>Simple PCL viewer</brief>
			<full>Simple PCL viewer, using PCD as source of depth data.</full>	
		</Description>
	</Reference>
	
	<!-- task definition -->
	<Subtasks>
		<Subtask name="Processing">
			<Executor name="Exec1"  period="0.1">
				
        
			<Component name="NextImageTrigger" type="CvBasic:Trigger" priority="1" bump="0">
			</Component>
			<Component name="SequenceModel" type="S2ObjectModel:S2OMSequence" priority="2" bump="0">
				<param name="sequence.directory">/home/jkrasnod/data/sceny/v1/all/</param>
				<param name="mode.loop">0</param>
				<param name="mode.auto_trigger">1</param>						
				<param name="read_on_init">1</param>						
			</Component>
			<Component name="SequenceScene" type="S2ObjectModel:S2OMSequence" priority="3" bump="0">
				<param name="sequence.directory">/home/jkrasnod/data/sceny/v1/all/</param>
				<param name="mode.loop">0</param>
				<param name="mode.auto_trigger">1</param>						
				<param name="read_on_init">1</param>						
			</Component>

			 <Component name="CutModel" type="PCL:PassThrough" priority="4" bump="0">
				<param name="x.a">-20</param>
				<param name="x.b">20</param>
				<param name="y.a">-20</param>
				<param name="y.b">20</param>
				<param name="z.a">0</param>
				<param name="z.b">20</param>
				<param name="negative_x">0</param>
				<param name="negative_y">0</param>
				<param name="negative_z">0</param>
			</Component>

			<Component name="HMP2" type="CvCoreTypes:HomogenousMatrixProvider" priority="5" bump="0">
				<param name="offset.x">0</param>
				<param name="offset.y">0</param>
				<param name="offset.z">0</param>
				<param name="offset.roll">0</param>
				<param name="offset.pitch">0</param>
				<param name="offset.yaw">1.047</param>
			</Component>
			
			<Component name="TransformModel" type="PCL:CloudTransformer" priority="6" bump="0">
			</Component>
			           
			<Component name="Match" type="S2ObjectModel:SingleS2OMMatcher" priority="7" bump="0">
				<param name="shot.max_disance">2</param>
				<param name="sift.max_disance">1000000</param>
				<param name="shot.oneToOne">1</param>
				<param name="sift.oneToOne">1</param>
				<param name="ransac.inlier_threshold">0.00001</param>
				<param name="ransac.max_iterations">150</param>
				<param name="shot.nextBest">0</param>
				<param name="sift.nextBest">0</param>					
			</Component>
				
			<Component name="AvgMatrix" type="CvBasic:CalcObjectLocation" priority="8" bump="0">
			</Component>
			
			<Component name="TransformSift" type="PCL:CloudTransformer" priority="9" bump="0">
			</Component>
				
			<Component name="TransformShot" type="PCL:CloudTransformer" priority="10" bump="0">
			</Component>
		
			<Component name="TransformRansac" type="PCL:CloudTransformer" priority="11" bump="0">
			</Component>
				
			<Component name="TransformAvg" type="PCL:CloudTransformer" priority="12" bump="0">
			</Component>
				
			<Component name="ErrorSift" type="S2ObjectModel:ReprojectionError" priority="13" bump="0">						
				<param name="group_id">1</param>
			</Component>
				
			<Component name="ErrorShot" type="S2ObjectModel:ReprojectionError" priority="14" bump="0">										
				<param name="group_id">2</param>
			</Component>
				
			<Component name="ErrorRansac" type="S2ObjectModel:ReprojectionError" priority="15" bump="0">						
				<param name="group_id">3</param>
			</Component>
				
			<Component name="ErrorAvg" type="S2ObjectModel:ReprojectionError" priority="16" bump="0">						
				<param name="group_id">4</param>
			</Component>
				
			<Component name="Errors" type="S2ObjectModel:ErrorAggregation" priority="17" bump="0">
				<param name="names.group1">sifty</param>					
				<param name="names.group2">shoty</param>					
				<param name="names.group3">sifty+shoty (wspolny RANSAC)</param>					
				<param name="names.group4">sifty+shoty (srednia)</param>					
			</Component>					
			</Executor>
		</Subtask>
		
	<!--  	<Subtask name="Visualisation">
			<Executor name="Exec2" period="0.01">
				<Component name="CorrespondencesViewer" type="S2ObjectModel:CorrespondencesViewer" priority="1" bump="0">
					<param name="display.all_viewpoints">0</param>
				</Component>
			</Executor>
		</Subtask> 
		
	-->
	</Subtasks> 
	
	<!-- pipes connecting datastreams -->
	<DataStreams>
		<Source name="NextImageTrigger.out_trigger">
			<sink>SequenceModel.in_trigger</sink>
			<sink>SequenceScene.in_trigger</sink>
		</Source>
		
		<!-- Wczytywanie danych	-->


 <Source name="SequenceModel.out_cloud_xyzrgb">
<sink>CutModel.in_cloud_xyzrgb</sink>
</Source>
